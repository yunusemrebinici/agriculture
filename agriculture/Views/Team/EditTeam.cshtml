@model EntityLayer.Concrete.Team
@{
	ViewData["Title"] = "EditTeam";
	Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Düzenleme Sayfası</h4>
			<form class="forms-sample" method="post">

				<div class="form-group">
					@Html.HiddenFor(x => x.TeamID)
					<label class="text-black">Adı</label>
					<span asp-validation-for="PersonName" class="text-danger"></span>
					<input type="text" class="form-control" placeholder="Ad Soyad" asp-for="PersonName" />
				</div>
				<br />
				<div class="form-group">
					<label class="text-black">Görevi</label>
					<span asp-validation-for="Title" class="text-danger"></span>
					<input type="text" class="form-control" placeholder="Görevi" asp-for="Title" />
				</div>
				<div class="form-group">
					<label class="text-black">Resim Yolu</label>
					<span asp-validation-for="ImageUrl" class="text-danger"></span>
					<input type="text" class="form-control" placeholder="Resim Yolu" asp-for="ImageUrl" />
				</div>
				<div class="form-group">
					<label class="text-black">Facebook</label>
					<span asp-validation-for="FacebookUrl" class="text-danger"></span>
					<input type="text" class="form-control" placeholder="Facebook" asp-for="FacebookUrl" />
				</div>
				<div class="form-group">
					<label class="text-black">İnstagram</label>
					<span asp-validation-for="InstagramUrl" class="text-danger"></span>
					<input type="text" class="form-control" placeholder="İnstagram" asp-for="InstagramUrl" />
				</div>
				<div class="form-group">
					<label class="text-black">Web</label>
					<span asp-validation-for="WebSiteUrl" class="text-danger"></span>
					<input type="text" class="form-control" placeholder="Web" asp-for="WebSiteUrl" />
				</div>
				<div class="form-group">
					<label class="text-black">X</label>
					<span asp-validation-for="TwitterUrl" class="text-danger"></span>
					<input type="text" class="form-control" placeholder="X" asp-for="TwitterUrl" />
				</div>
				<br />			
				<button type="submit" class="btn btn-primary btn-rounded btn-fw">Kaydet</button>
			</form>
			<br />
			
		</div>
	</div>
</div>

