@using EntityLayer.Concrete
@model List<Team>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Takım Arkadaşlarımızın Listesi</h4>
			<p class="card-description">
			</p>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Görsel</th>
							<th>Personel Id</th>
							<th>Ad </th>
							<th>Görev</th>
							<th>Sil</th>
							<th>Düzenle</th>
						</tr>

					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td class="py-1">
									<img src="@item.ImageUrl" alt="image" />
								</td>
								<td>@item.TeamID</td>
								<td>@item.PersonName</td>
								<td>@item.Title</td>
								<td><a href="/Team/DeleteTeam/@item.TeamID" class="btn btn-danger">Sil </a></td>
								<td><a href="/Team/EditTeam/@item.TeamID" class="btn btn-info">Düzenle </a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
			<br />
			<a href="/Team/AddTeam/" class="btn btn-success btn-rounded btn-fw">Yeni Personel Girişi </a></td>
		</div>
	</div>
</div>

