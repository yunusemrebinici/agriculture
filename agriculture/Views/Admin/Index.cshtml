@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Üye Hesap Hizmetleri</h4>

			<div class="table-responsive pt-3">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>Kullanıcı Adı</th>							
							<th>Sil</th>
							<th>Düzenle</th>							
						</tr>
					</thead>

					@foreach (var item in Model)
					{
						<tr>
							<td>@item.UserName</td>
							<td><a href="/Admin/DeleteAdmin/@item.AdminID/" class="btn btn-danger">Sil </a></td>
							<td><a href="/Admin/EditAdmin/@item.AdminID/" class="btn btn-info">Düzenle </a></td>						
						</tr>
					}
				</table>
				<br />
				<a href="/Admin/AddAdmin/" class="btn btn-success">Ekleme İşlemleri</a>
			</div>
		</div>
	</div>
</div>

