@using EntityLayer.Concrete
@model List<Announcement>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Duyuru Hizmetleri</h4>

			<div class="table-responsive pt-3">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>ID</th>
							<th>Başlık</th>						
							<th>Duyuru</th>							
							<th>Tarih</th>
							<th>Sil</th>
							<th>Düzenle</th>
							<th>Durum</th>
							

						</tr>
					</thead>

					@foreach (var item in Model)
					{
						<tr>
							<td>@item.AnnouncementID</td>
							<td>@item.Title</td>	
							<td>@item.Description</td>	
							<td>@item.Date</td>		
							
							<td><a href="/Announcement/Deleteannouncement/@item.AnnouncementID/" class="btn btn-danger">Sil </a></td>
							<td><a href="/Announcement/Editannouncement/@item.AnnouncementID/" class="btn btn-info">Düzenle </a></td>
							@if (item.Status==true)
							{
								<td><a href="/Announcement/ChangeStatusFalse/@item.AnnouncementID/" class="btn btn-secondary">Pasif Yap </a></td>
							}
							else
							{
								<td><a href="/Announcement/ChangeStatusToTrue/@item.AnnouncementID/" class="btn btn-warning">Aktif Yap </a></td>
							}
							
							
						</tr>
					}

				</table>
				<br />
				<a href="/Announcement/Addannouncement/" class="btn btn-success">Ekleme İşlemleri</a>
			</div>
		</div>
	</div>
</div>
