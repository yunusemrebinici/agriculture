@model EntityLayer.Concrete.Announcement
@{
	ViewData["Title"] = "Addannouncement";
	Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h1 class="card-title">Yeni Duyuru  Ekleme</h1>
			<form class="forms-sample" method="post">

				<div class="form-group">
					<label>Başlık</label>
					<input type="text" asp-for="Title" class="form-control" />
				</div>
				<br />

				<div class="form-group">
					<label>Açıklama</label>
					<textarea cols="30" rows="5" asp-for="Description" class="form-control"> </textarea>
				</div>
				<br />
				<button class="btn btn-info">Ekle</button>

			</form>
		</div>
	</div>
</div>

