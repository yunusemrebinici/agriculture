@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "Editannouncement";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h1 class="card-title">Duyuru Güncelleme</h1>
			<form class="forms-sample" method="post">
				@Html.HiddenFor(x=>x.AnnouncementID)

				<div class="form-group">
					<label>Başlık</label>
					<input type="text" asp-for="Title" class="form-control" />
				</div>
				<br />

				<div class="form-group">
					<label>Açıklama</label>
					<textarea cols="30" rows="5" asp-for="Description" class="form-control"> </textarea>
				</div>
				<br />
				<div class="form-control">
					<label>Tarih</label>
					<input type="datetime-local" asp-for="Date" class="form-control" />
				</div>
				<button class="btn btn-info">Güncelle</button>

			</form>
		</div>
	</div>
</div>

