@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<h2>Mesaj Listesi</h2>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>İsim</th>
							<th>Mail</th>
							<th>Mesaj</th>							
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Name</td>
								<td>@item.Mail</td>
								<td>@item.Message</td>
								<td><a href="/Contact/DeleteContact/@item.ContactID/" class="btn btn-danger">Sil</a></td>
								<td><a href="/Contact/Details/@item.ContactID/" class="btn btn-info">Detaylar</a></td>
							</tr>
						}
					</tbody>
				</table>
				<br />				
			</div>
		</div>
	</div>



