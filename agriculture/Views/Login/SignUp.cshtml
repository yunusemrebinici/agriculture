@model agriculture.Models.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Kayıt Sayfası</title>
  <!-- plugins:css -->
    <link rel="stylesheet" href="~/AdminUI/template/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/AdminUI/template/vendors/base/vendor.bundle.base.css">
  <!-- endinject -->
  <!-- plugin css for this page -->
  <!-- End plugin css for this page -->
  <!-- inject:css -->
    <link rel="stylesheet" href="~/AdminUI/template/css/style.css">
  <!-- endinject -->
    <link rel="shortcut icon" href="~/AdminUI/template/images/favicon.png" />
</head>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                                <img src="~/AdminUI/template/images/logo.svg" alt="logo">
              </div>
              <h4>Kaydınız yok mu?</h4>
              <h6 class="font-weight-light">Kayıt olmak için aşağıdaki formu doldurun.</h6>
              <form class="pt-3" method="post">               
                <div class="form-group">
                  <input type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="KullanıcıAdı" asp-for="userName">
                  <span asp-validation-for="userName"></span>
                </div>
                <div class="form-group">
                  <input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email" asp-for="mail">
                  <span asp-validation-for="mail" class="text-danger"></span>
                </div>               
                <div class="form-group">
                  <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifre" asp-for="password">
                  <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group">
                  <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Tekrar Giriniz" asp-for="passwordConfirm">
                  <span asp-validation-for="passwordConfirm" class="text-danger"></span>
                </div
                <div class="mb-4">
                  <div class="form-check">
                    <label class="form-check-label text-muted">
                      <input type="checkbox" class="form-check-input">
                      Okudum Kabul Ediyorum.
                    </label>
                  </div>
                </div>
                <div class="mt-3">
                  <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
                </div>
                <div class="text-center mt-4 font-weight-light">
                  Zaten bir hesabınız var mı? <a href="/Login/Index/" class="text-primary">Login</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <!-- plugins:js -->
    <script src="~/AdminUI/template/vendors/base/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- inject:js -->
    <script src="~/AdminUI/template/js/off-canvas.js"></script>
    <script src="~/AdminUI/template/js/hoverable-collapse.js"></script>
    <script src="~/AdminUI/template/js/template.js"></script>
  <!-- endinject -->
</body>

</html>
