@model EntityLayer.Concrete.Address
@{
    ViewData["Title"] = "EditAdress";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Düzenleme Sayfası</h4>
			<form method="post">
				@Html.HiddenFor(x => x.AddressID)

				@Html.Label("İkametgah")
				<input type="text" asp-for="Description1" class="form-control" />
				@Html.ValidationMessageFor(x => x.Description1, "", new { @class = "text-danger" })
				<br />

				@Html.Label("Şehir")
				<input type="text" asp-for="Description2" class="form-control" />
				<span asp-validation-for="Description2" class="text-danger"></span>
				<br />

				@Html.Label("Posta Kodu")
				<input type="text" asp-for="Description3" class="form-control" />
				@Html.ValidationMessageFor(x => x.Description3, "", new { @class = "text-warning" })
				<br />

				@Html.Label("Telefon Numarası")
				<input type="text" asp-for="Description4" class="form-control" />
				@Html.ValidationMessageFor(x => x.Description4, "", new { @class = "text-warning" })
				<br />

				@Html.Label("Şehir Ve Ülke")
				<input type="text" asp-for="Mapİnfo" class="form-control" />
				@Html.ValidationMessageFor(x => x.Mapİnfo, "", new { @class = "text-warning" })
				<br />

				<button type="submit" class="btn btn-info">Güncelle</button>

			</form>
		</div>
	</div>
</div>

