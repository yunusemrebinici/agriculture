@using EntityLayer.Concrete
@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">	
	<div class="card">
		<h2>Adres Listesi</h2>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>İkametgah</th>
							<th>İl/İlçe</th>
							<th>Posta Kodu</th>
							<th>Telefon</th>
							<th>Adres url</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Description1</td>
								<td>@item.Description2</td>
								<td>@item.Description3</td>
								<td>@item.Description4</td>
								<td>@item.Mapİnfo</td>
								<td><a href="/Adresses/Delete/@item.AddressID/" class="btn btn-danger">Sil</a></td>
								<td><a href="/Adresses/EditAdress/@item.AddressID/" class="btn btn-info">Düzenle</a></td>
							</tr>
						}
					</tbody>
				</table>
				<br />
				<td><a href="/Adresses/AddAdress/" class="btn btn-inverse-success">Ekle</a></td>
			</div>
		</div>
	</div>

