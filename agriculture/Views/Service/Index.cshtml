@using EntityLayer.Concrete
@model List<Service>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<p></p>

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Servis Hizmetleri</h4>

			<div class="table-responsive pt-3">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>ID</th>
							<th>Başlık</th>
							<th>Sil</th>
							<th>Düzenle</th>

						</tr>
					</thead>
					
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.ServiceID</td>
								<td>@item.Title</td>
								<td><a href="/Service/Delete/@item.ServiceID" class="btn btn-danger">Sil </a></td>
								<td><a href="/Service/EditService/@item.ServiceID" class="btn btn-info">Düzenle </a></td>
							</tr>
						}			
					
				</table>
				<a href="/Service/AddService/" class="btn btn-success">Ekleme İşlemleri</a>
			</div>
		</div>
	</div>
</div>



