@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Düzenleme Sayfası</h4>
            <form method="post">
                @Html.HiddenFor(x => x.ServiceID)

                @Html.Label("Başlık")
                <input type="text" asp-for="Title" class="form-control" />
                <br />

                @Html.Label("Açıklama ")
                <input type="text" asp-for="Description" class="form-control" />
                <br />

                @Html.Label("Fotoğraf Yolu")
                <input type="text" asp-for="Image" class="form-control" />
                <br />

                <button type="submit" class="btn btn-info">Güncelle</button>

            </form>
		</div>
	</div>
</div>



