@model EntityLayer.Concrete.Service
@{
	ViewData["Title"] = "AddService";
	Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Ekleme Sayfası</h4>
			<form method="post">


				@Html.Label("Başlık")
				@Html.TextAreaFor(x => x.Title, new { @class = "form-control" })

				<br />

				@Html.Label("Açıklama ")
				@Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
				<br />

				@Html.Label("Fotoğraf Yolu")
				@Html.TextAreaFor(x => x.Image, new { @class = "form-control" })
				<br />
				@Html.Label("Tarih Yolu")
				@* @Html.TextAreaFor(x => x.Date, new { @class = "form-control" }) *@
				<br />

				<button class="btn btn-info">Ekle</button>

			</form>
		</div>
	</div>
</div>



