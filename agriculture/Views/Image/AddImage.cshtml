@model EntityLayer.Concrete.Image
@{
	ViewData["Title"] = "AddImage";
	Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h1 class="card-title">Resim Ekleme</h1>
			<form class="forms-sample" method="post">

				<div class="form-group">
					<label>Başlık</label>
					<input type="text" asp-for="Title" class="form-control" />
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<br />

				<div class="form-group">
					<label>Açıklama</label>
					<textarea cols="30" rows="5" asp-for="Description" class="form-control"> </textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<br />

				<div class="form-group">
					<label>Resim Yolu</label>
					<textarea cols="30" rows="5" asp-for="ImageUrl" class="form-control"> </textarea>
					<span asp-validation-for="ImageUrl" class="text-danger"></span>
				</div>
				<br />

				<button class="btn btn-info">Ekle</button>

			</form>
		</div>
	</div>
</div>

