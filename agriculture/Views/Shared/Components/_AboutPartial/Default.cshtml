@using EntityLayer.Concrete
@model List<About>

<div class="about" id="about">
	<div class="container">
		<h3 class="tittle">Hakkımızda </h3>
		<p class="heading-btm-w3ls">Tarım ürünleri alanında dünya lideri bir tedarikçiyiz..</p>
		<div id="horizontalTab">
			<ul class="resp-tabs-list">
				<li>Hikaye</li>
				<li>Hakkında </li>
				<li>Müşteriler </li>
			</ul>
			<div class="resp-tabs-container">
				@foreach (var item in Model)
				{
					<div class="tab1">
						<p class="para-w3-agileits">@item.AboutHistory</p>
					</div>
					<div class="tab2">
						<p class="para-w3-agileits">@item.AboutUs</p>
					</div>
				}
				
				<div class="tab3">
					<div class="clients">
						<ul>
							<li><img src="~/web/images/c1.png" alt="clients" class="img-responsive" /><span>Salih Duman</span></li>
							<li><img src="~/web/images/c2.png" alt="clients" class="img-responsive" /><span>Deniz Türk</span></li>
							<li><img src="~/web/images/c3.png" alt="clients" class="img-responsive" /><span>Yasin Bozkurt</span></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>