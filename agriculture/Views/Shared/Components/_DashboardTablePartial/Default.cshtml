@using EntityLayer.Concrete
@model List<Contact>
<div class="row">
	<div class="col-md-12 stretch-card">
		<div class="card">
			<div class="card-body">
				<p class="card-title">Gelen Mesajlar</p>
				<div class="table-responsive">
					<table id="recent-purchases-listing" class="table">
						<thead>
							<tr>
								<th>Ad Soyad</th>
								<th>Mail</th>
								<th>Tarih</th>
								<th>Mesaj</th>
								
								
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.Name</td>
									<td>@item.Mail</td>
									<td>@DateTime.Now.ToShortDateString()</td>
									<td><a href="/Contact/Index/" class="btn btn-info">Mesajlar</a></td>								
								</tr>
							}														
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>